<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".question7fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionnumlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="@color/purple_700"
            android:layout_gravity="center"
            android:text="Question ##" />
        <TextView
            android:id="@+id/question7question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:layout_marginTop="10dp"
            android:background="@color/navy"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:padding="5dp"
            android:gravity="center"
            android:text="@string/question1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@color/purple_700"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Q7ButtonA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:layout_margin="3dp"
            android:text="ANSWER A" />

        <Button
            android:id="@+id/Q7ButtonB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:layout_margin="3dp"
            android:text="ANSWER B" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@color/purple_700"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Q7ButtonC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:layout_margin="3dp"
            android:text="ANSWER C" />

        <Button
            android:id="@+id/Q7ButtonD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:layout_margin="3dp"
            android:text="ANSWER D" />
    </LinearLayout>

    <Button
        android:id="@+id/q7FinalAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="100dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:visibility="invisible"
        android:backgroundTint="@color/LimeGreen"
        android:textColor="@color/navy"
        android:text="Final Answer" />

</LinearLayout>